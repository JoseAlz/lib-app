<%- include('layout_top'); %>
<h1><%= title %>: <%= author.name %></h1>
<p><%= author.lifespan %></p>
<% if (author_books.length) { %>
  <p>Please delete the following books before attempting to delete this author.</p>
  <div style="margin-left: 20px; margin-top: 20px">
    <h4>Books</h4>
    <dl>
      <% author_books.forEach(function(book) { %>
        <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
        <% const bookSummary = book.summary.length > 300 ? book.summary.slice(0, 300).trim() + "..." : book.summary %>
        <dd><%= bookSummary %></dd>
      <% }); %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this Author?</p>
  <form method="POST">
    <div class=form-group>
      <input id="authorid" class="form-control" type="hidden" name="authorid" value="<%= author._id%>" />
    </div>
  <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>
<%- include('layout_bottom'); %>
