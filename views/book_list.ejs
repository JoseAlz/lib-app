<%- include('layout_top'); -%>
<h1><%= title %></h1>
<p>Welcome to <b>LocalLibrary</b>, a very basic Express website developed as a tutorial example of the Mozilla Developer Network (MDN).</p>
<h2>List of Books</h2>
<ul>
<% if (book_list.length != 0) { book_list.forEach(function(book) { %>
<li>
<a href="<%= book.url %>"><%= book.title %></a>
(<%= book.author.family_name %>, <%= book.author.first_name %>)
</li>
<% }); %>
</ul>
<%} else { %>
  <p>There are no books :( </p>
<% } %>
<%- include('layout_bottom'); -%>
