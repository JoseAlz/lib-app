<%- include('layout_top'); -%>
<h1>ID: <%= bookinstance.id %></h1>
<p><b>Title: </b><a href="<%= bookinstance.book.url %>"><%= bookinstance.book.title %></a></p>
<p><b>Imprint: </b><%= bookinstance.imprint %></p>
<% if (bookinstance.status == "Available") { %>
<p><b>Status: </b><span class="text-success"><%= bookinstance.status %></span></p>
<% } else if (bookinstance.status == "Maintenance") { %>
<p><b>Status: </b><span class="text-danger"><%= bookinstance.status %></span></p>
<% } else { %>
<p><b>Status: </b><span class="text-warning"><%= bookinstance.status %></span></p>
<% } %>
<% if (bookinstance.status != "Available") { %>
<p><b>Due back: </b><%= bookinstance.due_back_formatted %></p>
<% } %>
<hr>
<p><a href="<%= bookinstance.url %>/delete">Delete</a></p>
<p><a href="<%= bookinstance.url %>/update">Update</a></p>
<%- include('layout_bottom'); -%>
